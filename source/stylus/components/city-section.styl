.city-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: auto
  background-color #4A1C1C
  +above($breakpoints.xxl)
    background-size: cover

  &__title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__container
    position relative
    color: $color-white
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 70px 0 70px 0
    +above($breakpoints.xxl)
      padding 90px 0 90px 0

  &__bottom
    padding 20px 20px 20px 20px
    border 1px solid $color-white
    border-radius: 15px
    width 100%
    max-width: 350px
    margin-top 20px
    +above($breakpoints.md)
      padding 33px 20px 22px 20px
      margin-top 30px
    +above($breakpoints.xxl)
      max-width: 550px
      margin-top 38px
      padding 33px 35px 22px 35px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    padding-top 20px
    +above($breakpoints.md)
      gap: 19px

  &__img
    width 300px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 500px;
      bottom: 0;
      right: -85px;
    +above($breakpoints.md)
      width 600px
      bottom: 0
      right: 0
    +above($breakpoints.xxl)
      width 704px
      bottom: 0
      right: -56px

.city-item-btn
  +above($breakpoints.xxl)
    margin-top 10px
